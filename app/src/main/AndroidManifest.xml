<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunodiaz">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".melichallenge.MeliChallengeApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_codos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeLiChallenge">
        <activity android:name=".melichallenge.SplashActivity"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".melichallenge.MainActivity"></activity>
    </application>

</manifest>